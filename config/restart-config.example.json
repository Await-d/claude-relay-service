{
  "restartConfig": {
    "// 配置说明": "CRS重启优化配置文件",
    "// 策略说明": {
      "fast": "快速重启 - 最小停机时间，适合开发环境",
      "graceful": "优雅重启 - 完整的启停流程，适合生产环境",
      "zero-downtime": "零停机重启 - 使用备用端口，适合高可用场景"
    },
    
    "defaultStrategy": "graceful",
    "enableMetrics": true,
    "enableAutoOptimization": false,
    
    "strategies": {
      "fast": {
        "shutdownTimeout": 5000,
        "startupTimeout": 15000,
        "skipWarmup": true,
        "skipHealthCheck": false,
        "maxRetries": 2
      },
      "graceful": {
        "shutdownTimeout": 15000,
        "startupTimeout": 45000,
        "skipWarmup": false,
        "skipHealthCheck": false,
        "maxRetries": 3,
        "preRestartValidation": true,
        "postRestartValidation": true
      },
      "zero-downtime": {
        "shutdownTimeout": 30000,
        "startupTimeout": 60000,
        "skipWarmup": false,
        "skipHealthCheck": false,
        "maxRetries": 3,
        "backupPortRange": [3001, 3010],
        "portSwitchDelay": 3000,
        "enableRollback": true
      }
    },
    
    "healthCheck": {
      "endpoint": "/health",
      "timeout": 10000,
      "interval": 1000,
      "retries": 5,
      "expectedStatus": "healthy"
    },
    
    "monitoring": {
      "enablePerformanceTracking": true,
      "enableAlerts": false,
      "alertThresholds": {
        "maxRestartTime": 60000,
        "minSuccessRate": 95,
        "maxConsecutiveFailures": 3
      },
      "metricsRetention": 168
    },
    
    "logging": {
      "level": "info",
      "enableRestartLogs": true,
      "logRotation": true,
      "maxLogSize": "10MB",
      "maxLogFiles": 7
    },
    
    "advanced": {
      "processCleanup": {
        "killOrphanProcesses": true,
        "clearPidFiles": true,
        "clearTempFiles": false
      },
      "resourceManagement": {
        "enableMemoryCheck": false,
        "maxMemoryUsage": "1GB",
        "enableDiskCheck": false,
        "minDiskSpace": "500MB"
      },
      "optimization": {
        "enableAdaptiveStrategy": false,
        "strategyOptimizationThreshold": 10,
        "autoAdjustTimeouts": false
      }
    },
    
    "environment": {
      "development": {
        "defaultStrategy": "fast",
        "enableDebugMode": true,
        "reduceTimeouts": true
      },
      "production": {
        "defaultStrategy": "graceful",
        "enableStrictValidation": true,
        "enableFailureAlerts": true
      },
      "staging": {
        "defaultStrategy": "graceful",
        "enablePerformanceTracking": true
      }
    }
  }
}